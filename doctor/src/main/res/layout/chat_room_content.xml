<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".module.patientinfo.PatientInfoContainerActivity"
    tools:showIn="@layout/chat_room_activity">

    <android.support.v7.widget.CardView
        android:id="@+id/scroll_chat_room_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stl_chat_room"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tl_indicator_color="@color/colorPrimary"
            app:tl_indicator_width_equal_title="true"
            app:tl_textSelectColor="@color/colorAccent"
            app:tl_textUnselectColor="@color/text_color_primary_gray"
            app:tl_textsize="14sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_chat_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scroll_chat_room_top"/>
</RelativeLayout>
