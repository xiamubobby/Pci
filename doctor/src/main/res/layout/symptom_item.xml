<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/item_interval_middle">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_dot"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_interval_middle"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-02-24"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_interval"
            android:text="@string/symptom_check_status"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_interval"
            android:background="@drawable/shape_rectangle_outline"
            android:orientation="vertical"
            android:padding="@dimen/item_interval">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="主诉："
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_primary"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/item_interval_middle"
                android:text="备注"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_primary"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_interval"
            android:background="@color/bg_gray"
            android:orientation="vertical"
            android:padding="@dimen/item_interval"
            android:text="备注内容"
            android:textColor="@color/text_color_primary"/>
    </LinearLayout>

</LinearLayout>