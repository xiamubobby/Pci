<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wonders.xlab.pci.doctor.module.me.groupmanage.GroupModifyActivity"
    tools:showIn="@layout/group_modify_activity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_group_modify_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/item_interval_middle"
                android:paddingRight="@dimen/item_interval_middle"/>

            <include layout="@layout/divider_vertical_large"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_interval_middle"
                android:paddingRight="@dimen/item_interval_middle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小组名称"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="@dimen/text_size_middle"/>

                <TextView
                    android:id="@+id/tv_group_modify_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/item_interval_middle"
                    android:drawableRight="@drawable/ic_edit_pencil"
                    android:gravity="right"
                    android:textColor="@color/text_color_primary_gray"
                    android:textSize="@dimen/text_size_small"/>
            </RelativeLayout>

            <include layout="@layout/divider_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:drawableRight="@drawable/ic_edit_pencil"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_interval_middle"
                android:paddingRight="@dimen/item_interval_middle"
                android:text="小组简介"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:id="@+id/tv_group_modify_group_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_interval_small"
                android:paddingLeft="@dimen/item_interval_middle"
                android:paddingRight="@dimen/item_interval_middle"
                android:paddingTop="@dimen/item_interval_small"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_small"/>

            <include layout="@layout/divider_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/item_interval_middle"
                android:paddingRight="@dimen/item_interval_middle">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开通服务"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="@dimen/text_size_middle"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_group_modify_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <include layout="@layout/divider_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_interval_middle"
                android:paddingRight="@dimen/item_interval_middle"
                android:text="授权管理员"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
