<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="bean"
            type="com.wonders.xlab.pci.doctor.module.packagemanage.adapter.bean.GroupServiceBean"/>

        <import type="android.graphics.Color"/>

        <import type="android.text.TextUtils"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="?attr/selectableItemBackground"
                  android:clickable="true"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:padding="@dimen/item_interval_middle">

        <ImageView
            android:id="@+id/iv_group_service_item_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"/>

        <TextView
            style="@style/LargeBlackWrapTextView"
            android:layout_marginLeft="@dimen/item_interval_small"
            android:text="@{bean.packageName}"/>

        <TextView
            style="@style/MiddleGrayMatchTextView"
            android:layout_marginLeft="@dimen/item_interval_small"
            android:gravity="right|center_vertical"
            android:text="@{bean.packageDesc}"
            android:textColor="@{TextUtils.isEmpty(bean.packageDescColor) ? @color/text_color_primary_gray : Color.parseColor(bean.packageDescColor)}"/>
    </LinearLayout>
</layout>