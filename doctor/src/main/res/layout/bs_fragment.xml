<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wonders.xlab.pci.doctor.module.chatroom.bs.BSFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d0d0d0"
        android:minHeight="?attr/listPreferredItemHeight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bs_cell_divider_width"
            android:layout_weight="1"
            android:background="#eaebeb"
            android:gravity="center"
            android:text="日\n期"
            android:textColor="@color/text_color_primary_black"
            android:textSize="@dimen/text_size_middle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bs_cell_divider_width"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bs_cell_divider_width"
                android:layout_marginLeft="@dimen/bs_cell_divider_width"
                android:background="#eaebeb"
                android:gravity="center"
                android:paddingBottom="@dimen/item_interval_small"
                android:paddingTop="@dimen/item_interval_small"
                android:text="早餐"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bs_cell_divider_width"
                    android:layout_weight="1"
                    android:background="#eaebeb"
                    android:gravity="center"
                    android:text="前"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="@dimen/text_size_middle"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bs_cell_divider_width"
                    android:layout_weight="1"
                    android:background="#eaebeb"
                    android:gravity="center"
                    android:text="后"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="@dimen/text_size_middle"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bs_cell_divider_width"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bs_cell_divider_width"
                android:layout_marginLeft="@dimen/bs_cell_divider_width"
                android:background="#eaebeb"
                android:gravity="center"
                android:paddingBottom="@dimen/item_interval_small"
                android:paddingTop="@dimen/item_interval_small"
                android:text="午餐"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bs_cell_divider_width"
                    android:layout_weight="1"
                    android:background="#eaebeb"
                    android:gravity="center"
                    android:text="前"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="@dimen/text_size_middle"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bs_cell_divider_width"
                    android:layout_weight="1"
                    android:background="#eaebeb"
                    android:gravity="center"
                    android:text="后"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="@dimen/text_size_middle"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bs_cell_divider_width"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/bs_cell_divider_width"
                android:layout_marginLeft="@dimen/bs_cell_divider_width"
                android:background="#eaebeb"
                android:gravity="center"
                android:paddingBottom="@dimen/item_interval_small"

                android:paddingTop="@dimen/item_interval_small"
                android:text="晚餐"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bs_cell_divider_width"
                    android:layout_weight="1"
                    android:background="#eaebeb"
                    android:gravity="center"
                    android:text="前"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="@dimen/text_size_middle"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bs_cell_divider_width"
                    android:layout_weight="1"
                    android:background="#eaebeb"
                    android:gravity="center"
                    android:text="后"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="@dimen/text_size_middle"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bs_cell_divider_width"
            android:layout_weight="1"
            android:background="#eaebeb"
            android:gravity="center"
            android:text="睡\n前"
            android:textColor="@color/text_color_primary_black"
            android:textSize="@dimen/text_size_middle"/>
    </LinearLayout>

    <im.hua.uikit.crv.CommonRecyclerView
        android:id="@+id/recycler_view_bs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/common_empty"
        app:networkErrorView="@layout/common_network_error"
        app:serverErrorView="@layout/common_server_error"/>

</LinearLayout>

