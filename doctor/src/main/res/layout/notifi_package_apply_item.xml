<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View"/>

        <import type="android.graphics.Color"/>

        <import type="android.text.TextUtils"/>

        <import type="im.hua.utils.DateUtil"/>

        <variable
            name="bean"
            type="com.wonders.xlab.pci.doctor.module.me.notification.adapter.bean.NotifiPackageApplyBean"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingTop="@dimen/item_interval_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/item_interval_small"
            android:singleLine="true"
            android:text='@{DateUtil.format(bean.recordTimeInMill,"yyyy/MM/dd HH:mm")}'
            android:textColor="@color/text_color_primary_gray"
            android:textSize="@dimen/text_size_small"/>

        <include layout="@layout/divider_vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_interval_small">

            <ImageView
                android:id="@+id/iv_package_apply_item_portrait"
                android:layout_width="64dp"
                android:layout_height="64dp"/>


            <TextView
                android:id="@+id/ll_notifi_package_apply_item"
                style="@style/MiddleBlackWrapTextView"
                android:layout_marginLeft="@dimen/item_interval_middle"
                android:layout_toRightOf="@+id/iv_package_apply_item_portrait"
                android:maxLength="10"
                android:singleLine="true"
                android:text="@{bean.patientName}"/>

            <TextView
                android:id="@+id/tv_package_apply_item_gender_age"
                style="@style/SmallGrayWrapTextView"
                android:layout_below="@+id/ll_notifi_package_apply_item"
                android:layout_marginLeft="@dimen/item_interval_middle"
                android:layout_marginTop="@dimen/item_interval_small"
                android:layout_toRightOf="@+id/iv_package_apply_item_portrait"
                android:singleLine="true"
                android:text='@{bean.patientGender + " " + bean.patientAge + "岁"}'/>

            <TextView
                style="@style/SmallGrayWrapTextView"
                android:layout_below="@+id/tv_package_apply_item_gender_age"
                android:layout_marginLeft="@dimen/item_interval_middle"
                android:layout_marginTop="@dimen/item_interval_very_small"
                android:layout_toRightOf="@+id/iv_package_apply_item_portrait"
                android:singleLine="true"
                android:text="@{bean.patientSurgeryHospital}"/>
        </RelativeLayout>

        <include layout="@layout/divider_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/MiddleBlackWrapTextView"
                android:padding="@dimen/item_interval_small"
                android:singleLine="true"
                android:text="申请套餐："/>

            <TextView
                style="@style/MiddleAccentWrapTextView"
                android:maxLines="2"
                android:padding="@dimen/item_interval_small"
                android:text="@{bean.applyPackageName}"/>
        </LinearLayout>

        <include layout="@layout/divider_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:padding="@dimen/item_interval_small">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/selector_rectangle_default_outline_primary_solid_white_pressed_primary"
                android:text="拒绝"
                android:textColor="@drawable/selector_text_default_accent_pressed_white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/item_interval_small"
                android:background="@drawable/selector_rectangle_default_primary_pressed_outline_primary_solid_white"
                android:text="同意"
                android:textColor="@drawable/selector_text_default_white_pressed_accent"/>
        </LinearLayout>
    </LinearLayout>
</layout>