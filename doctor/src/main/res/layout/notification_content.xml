<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_health_report"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#eaebeb"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:tl_iconVisible="false"
        app:tl_indicator_bounce_enable="true"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_corner_radius="4dp"
        app:tl_indicator_margin_left="25dp"
        app:tl_indicator_margin_right="25dp"
        app:tl_indicator_style="BLOCK"
        app:tl_textSelectColor="@android:color/white"
        app:tl_textUnselectColor="@color/text_color_primary_gray"
        app:tl_textsize="14sp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.wonders.xlab.pci.doctor.module.me.notification.NotificationActivity"
        tools:showIn="@layout/notification_activity"/>
</LinearLayout>
