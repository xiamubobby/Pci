<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_medicine_remind_edit_medicine_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:background="@color/bs_cell_bg"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_medicine_remind_edit_medicine_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_medicine_remind_edit_medicine_item_dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary_gray"
            android:textSize="16sp" />
            <ImageView
                android:id="@+id/tv_medicine_remind_edit_medicine_item_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_medicine_remind_edit_delete"/>
        </LinearLayout>


</RelativeLayout>