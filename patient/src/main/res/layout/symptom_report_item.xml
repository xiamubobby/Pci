<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/item_interval_middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_symptom_report_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_symptom_tv_not_confirm"
            android:paddingBottom="@dimen/item_interval_very_small"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle"
            android:paddingTop="@dimen/item_interval_very_small"
            android:text="已确认"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/tv_symptom_report_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingBottom="@dimen/item_interval_small"
            android:paddingTop="@dimen/item_interval_small"
            android:text="记录时间：12:12"
            android:textColor="@color/text_color_primary_gray"
            android:textSize="@dimen/text_size_middle"/>
    </LinearLayout>

    <com.zhy.view.flowlayout.FlowLayout
        android:id="@+id/fl_symptom_report_item_symptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/divider_vertical"/>

    <TextView
        android:id="@+id/tv_symptom_report_item_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/item_interval_small"
        android:paddingTop="@dimen/item_interval_small"
        android:text="医生建议："
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_middle"/>
</LinearLayout>