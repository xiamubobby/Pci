<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout2">

    <TextView
        android:layout_width="169dp"
        android:layout_height="19dp"
        android:id="@+id/hospital"
        tools:text="上海仁济医院"
        app:layout_constraintLeft_toLeftOf="@+id/doctorTitle"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="64dp"
        android:layout_height="17dp"
        android:id="@+id/department"
        tools:text="心内科"
        app:layout_constraintLeft_toRightOf="@+id/doctorTitle"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/doctorTitle" />

    <TextView
        android:layout_width="73dp"
        android:layout_height="17dp"
        android:id="@+id/doctorTitle"
        tools:text="主任医师"
        app:layout_constraintLeft_toLeftOf="@+id/doctorName"
        app:layout_constraintTop_toBottomOf="@+id/doctorName"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/hospital"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="134dp"
        android:layout_height="25dp"
        android:id="@+id/doctorName"
        tools:text="张柱"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_default_avatar_doctor"
        android:id="@+id/avatar"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>