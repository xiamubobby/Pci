<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wonders.xlab.patient.module.me.userinfo.UserInfoActivity"
    tools:showIn="@layout/user_info_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_line_divider_vertical"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="手术医院"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:id="@+id/textViewHospital"
                android:layout_width="match_parent"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/text_color_primary_black"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:hint="@string/user_info_hint_nop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手术医生"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:id="@+id/tv_user_info_doctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:hint="@string/user_info_hint_nop"
                android:singleLine="true"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最后手术时间"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:id="@+id/tv_user_info_surgery_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:hint="@string/user_info_hint_nop"
                android:singleLine="true"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支架个数"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:id="@+id/tv_user_info_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病史"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:id="@+id/tv_user_info_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/item_interval_middle"
                android:gravity="right|center_vertical"
                android:hint="@string/user_info_hint_nop"
                android:singleLine="true"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住址"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:id="@+id/tv_user_info_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/item_interval_middle"
                android:gravity="right|center_vertical"
                android:hint="@string/user_info_hint_nop"
                android:singleLine="true"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
