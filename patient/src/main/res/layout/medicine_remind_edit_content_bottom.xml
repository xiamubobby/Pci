<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/divider_vertical"/>

    <LinearLayout
        android:id="@+id/ll_medicine_remind_edit_start_date"
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeightSmall"
        android:layout_marginTop="@dimen/item_interval_small"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_interval_middle"
        android:paddingRight="@dimen/item_interval_middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始日期"
            android:textColor="@color/text_color_primary_black"
            android:textSize="@dimen/text_size_middle"/>

        <TextView
            android:id="@+id/tv_medicine_remind_edit_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_color_primary_gray"
            android:textSize="@dimen/text_size_middle"/>
    </LinearLayout>

    <include layout="@layout/divider_vertical"/>

    <LinearLayout
        android:id="@+id/ll_medicine_remind_edit_end_date"
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeightSmall"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_interval_middle"
        android:paddingRight="@dimen/item_interval_middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束日期"
            android:textColor="@color/text_color_primary_black"
            android:textSize="@dimen/text_size_middle"/>

        <TextView
            android:id="@+id/tv_medicine_remind_edit_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/medicine_remind_edit_end_date_default"
            android:textColor="@color/text_color_primary_gray"
            android:textSize="@dimen/text_size_middle"/>
    </LinearLayout>

    <include layout="@layout/divider_vertical_large"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_interval_middle"
        android:paddingRight="@dimen/item_interval_middle"
        android:text="药品名称"
        android:textColor="@color/text_color_primary_black"
        android:textSize="@dimen/text_size_middle"/>

    <include layout="@layout/divider_vertical"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_medicine_remind_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_medicine_remind_edit_add_medicine"
        android:layout_width="wrap_content"
        android:layout_height="?listPreferredItemHeightSmall"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_add_accent"
        android:drawablePadding="@dimen/item_interval_small"
        android:gravity="center"
        android:paddingLeft="@dimen/item_interval_middle"
        android:paddingRight="@dimen/item_interval_middle"
        android:text="添加药品"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_middle"/>

    <include layout="@layout/divider_vertical_large"/>

    <LinearLayout
        android:id="@+id/ll_medicine_remind_edit_message"
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeightSmall"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_interval_middle"
        android:paddingRight="@dimen/item_interval_middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒语"
            android:textColor="@color/text_color_primary_black"
            android:textSize="@dimen/text_size_middle"/>

        <TextView
            android:id="@+id/tv_medicine_remind_edit_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="吃药时间到了"
            android:textColor="@color/text_color_primary_gray"
            android:textSize="@dimen/text_size_middle"/>
    </LinearLayout>
</LinearLayout>