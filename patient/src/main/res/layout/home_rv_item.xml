<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="home"
            type="com.wonders.xlab.patient.module.main.home.HomeItemBean"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="?attr/listPreferredItemHeightLarge"
                  android:layout_margin="@dimen/item_interval"
                  android:background="@drawable/shape_rectangle_primary_border_translate_bg"
                  android:gravity="center"
                  android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@{home.drawableResId}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_interval"
            android:text="@{home.title}"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_primary"/>

    </LinearLayout>
</layout>