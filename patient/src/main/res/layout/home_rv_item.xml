<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="home"
            type="com.wonders.xlab.patient.module.home.adapter.bean.HomeItemBean"/>
    </data>

    <LinearLayout android:id="@+id/ll_home_rv_item"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="?attr/listPreferredItemHeight"
                  android:layout_margin="@dimen/item_interval_small"
                  android:background="@drawable/shape_home_label_daily_record"
                  android:gravity="center"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_home_rv_item"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="@dimen/item_interval_large"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_interval_small"
            android:layout_marginRight="@dimen/item_interval_middle"
            android:singleLine="true"
            android:text="@{home.title}"
            android:textColor="@color/text_color_primary_gray"
            android:textSize="@dimen/text_size_large"/>

    </LinearLayout>
</layout>