<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/item_interval_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_list_org_image_url"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/item_interval_middle"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/order_list_org_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="万达全程健康提供服务" />

        <TextView
            android:id="@+id/order_list_service_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="有效"
            android:textColor="@color/red" />

    </LinearLayout>

    <include layout="@layout/divider_vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/order_service_pic"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginLeft="@dimen/item_interval_middle"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_interval_middle"
            android:layout_toRightOf="@id/order_service_pic"
            android:text="订单号：123456"
            android:textColor="@color/text_color_primary_gray"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/service_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_no"
            android:layout_marginLeft="@dimen/item_interval_middle"
            android:layout_marginTop="@dimen/item_interval_middle"
            android:layout_toRightOf="@id/order_service_pic"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:text="健康检查服务套餐健康检查服务套餐健康检查服务套餐"
            android:textColor="@color/text_color_primary_gray"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/service_price_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="实付款：1000" />

    </RelativeLayout>

    <include layout="@layout/divider_vertical" />

</LinearLayout>