<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.wonders.xlab.patient.module.service.ServiceListCellDataUnit" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/divider_vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <ImageView
                android:id="@+id/somepic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_service_cell_title"/>
            <TextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/somepic"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimary"
                android:text="@{data.provider}"/>
        </RelativeLayout>
        <include layout="@layout/divider_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="6dp"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/portrait"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_default_avatar_patient"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="20sp"
                    android:text="@{data.title}"/>
                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textColor="@color/text_color_primary_gray"
                    android:text="@{data.brief}"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:text='@{"ï¿¥"+data.price.toString()}'/>
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/divider_vertical" />
    </LinearLayout>
</LinearLayout>
    </layout>
