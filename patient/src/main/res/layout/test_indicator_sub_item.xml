<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_test_indicator_sub_item"
        android:layout_width="0dp"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/item_interval_middle"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small" />

    <include layout="@layout/divider_horizontal" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_test_indicator_sub_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/item_interval_very_small"
            android:paddingLeft="@dimen/item_interval_middle"
            android:singleLine="true"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <include layout="@layout/divider_horizontal" />

    <TextView
        android:id="@+id/tv_test_indicator_sub_value"
        android:layout_width="0dp"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/item_interval_middle"
        android:singleLine="true"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>