<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".module.healthreport.BloodSugarReportFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_interval_middle"
        android:text="@string/text_blood_sugar_normal_range_title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_large"/>

    <include layout="@layout/divider_vertical"/>

    <TextView
        android:id="@+id/text_blood_sugar_report_ideal_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_interval_middle"
        android:text="血糖:1.5mmol/L ~ 7.5mmol/L"
        android:textColor="@color/text_color_primary_gray"
        android:textSize="@dimen/text_size_middle"/>

    <include layout="@layout/divider_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_interval_middle"
        android:text="@string/text_blood_sugar_measure_value_title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_large"/>

    <include layout="@layout/divider_vertical"/>

    <com.wonders.xlab.common.recyclerview.pullloadmore.PullLoadMoreRecyclerView
        android:id="@+id/recycler_view_blood_sugar_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
