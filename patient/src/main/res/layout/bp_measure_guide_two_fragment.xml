<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_measure_bp_guide_1_start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:minHeight="?listPreferredItemHeightSmall"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="① 点击开始"
                android:textSize="@dimen/text_size_large"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_interval_large"
                android:layout_marginTop="@dimen/item_interval_large"
                android:src="@drawable/pic_bp_guide_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:minHeight="?listPreferredItemHeightSmall"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="② 等待测量结果"
                android:textSize="@dimen/text_size_large"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_interval_large"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:minHeight="?listPreferredItemHeightSmall"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="③ 测量完成，取下袖套"
                android:textSize="@dimen/text_size_large"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_interval_large"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:minHeight="?listPreferredItemHeightSmall"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="④ 点击下面按钮，同步数据"
                android:textSize="@dimen/text_size_large"/>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_measure_bp_guide_1_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/selector_white_selected_primary_normal"
        android:text="同步血压数据"
        android:textColor="@drawable/selector_text_color_selected_accent"
        android:textSize="@dimen/text_size_large"/>

</RelativeLayout>
