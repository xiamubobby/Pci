<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/item_interval_small"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/medical_records_item_time"
            android:layout_width="0dp"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_interval_small"
            android:paddingRight="@dimen/item_interval_small"
            android:singleLine="true"
            android:textColor="#FF36AFE6"/>

        <TextView
            android:id="@+id/medical_records_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_rectangle_primary_solid_corner"
            android:gravity="center_vertical"
            android:padding="@dimen/item_interval_small"
            android:textColor="@color/white_pressed"/>

    </LinearLayout>

    <include layout="@layout/divider_vertical"/>

    <TextView
        android:id="@+id/medical_records_item_hospital_name"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_interval_small"
        android:paddingRight="@dimen/item_interval_small"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/medical_records_item_department_name"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_interval_small"
        android:paddingRight="@dimen/item_interval_small"
        android:singleLine="true"/>


    <TextView
        android:id="@+id/medical_records_item_medical_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dp"
        android:paddingLeft="@dimen/item_interval_small"
        android:paddingRight="@dimen/item_interval_small"
        />

    <TextView
        android:id="@+id/medical_records_item_click_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:drawableLeft="@drawable/ic_arrow_down"
        android:drawablePadding="5dp"
        android:text="点击查看更多"
        android:visibility="gone"/>

    <include layout="@layout/divider_vertical_large"/>
</LinearLayout>