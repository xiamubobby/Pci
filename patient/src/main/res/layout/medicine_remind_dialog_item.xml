<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/item_interval_middle">

    <TextView
        android:id="@+id/tv_medicine_remind_dialog_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_marginRight="@dimen/item_interval_small"
        android:textColor="@color/text_color_primary_black"
        android:textSize="@dimen/text_size_middle"/>

    <TextView
        android:id="@+id/tv_medicine_remind_dialog_item_num_and_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/text_color_primary_black"
        android:textSize="@dimen/text_size_middle"/>
</LinearLayout>