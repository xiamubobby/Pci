<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wonders.xlab.patient.module.medicineremind.edit.MedicineRemindEditActivity"
    tools:showIn="@layout/medicine_remind_edit_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/nb_medicine_remind_edit_am_or_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <NumberPicker
                android:id="@+id/nb_medicine_remind_edit_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <NumberPicker
                android:id="@+id/nb_medicine_remind_edit_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <include layout="@layout/divider_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:layout_marginTop="@dimen/item_interval_small"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始日期"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2016-04-01"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>

        <include layout="@layout/divider_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束日期"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="长期"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>

        <include layout="@layout/divider_vertical_large"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle"
            android:text="药品名称"
            android:textColor="@color/text_color_primary_black"
            android:textSize="@dimen/text_size_middle"/>

        <include layout="@layout/divider_vertical"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:drawableLeft="@drawable/ic_add_white_36dp"
            android:gravity="center"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle"
            android:text="添加药品"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_middle"/>

        <include layout="@layout/divider_vertical_large"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/item_interval_middle"
            android:paddingRight="@dimen/item_interval_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提醒语"
                android:textColor="@color/text_color_primary_black"
                android:textSize="@dimen/text_size_middle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="吃药时间到了"
                android:textColor="@color/text_color_primary_gray"
                android:textSize="@dimen/text_size_middle"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>