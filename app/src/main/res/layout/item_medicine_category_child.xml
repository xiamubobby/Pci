<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="medicine"
            type="com.wonders.xlab.pci.module.record.monitor.bean.MedicineCategoryChildBean"/>

        <import type="com.wonders.xlab.common.utils.DateUtil"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeightSmall"
        android:layout_marginLeft="@dimen/item_interval"
        android:layout_marginRight="@dimen/item_interval"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/item_interval">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:singleLine="true"
            android:text='@{medicine.isTitle?"时间":DateUtil.format(medicine.time, DateUtil.DEFAULT_FORMAT)}'/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text='@{medicine.isTitle?"剂量(mg)":medicine.value}'/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text='@{medicine.isTitle?"次数(mg/天)":medicine.counts}'/>

    </LinearLayout>
</layout>