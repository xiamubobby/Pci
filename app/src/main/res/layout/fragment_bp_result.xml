<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bp_result_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/pic_blood_pressure"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeightSmall"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_interval"
                android:text="当前测量结果"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_normal"/>

            <me.drakeet.labelview.LabelView
                android:id="@+id/tv_bp_result_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/item_interval"
                android:layout_marginTop="@dimen/item_interval_large"
                android:text="0/0"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_large"
                app:rightText=" mmHg"/>

            <View
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/bg_gray"/>

            <me.drakeet.labelview.LabelView
                android:id="@+id/tv_bp_result_pulse_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/item_interval"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_large"
                app:rightText=" 次/分"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeightSmall"
                android:layout_marginTop="@dimen/item_interval_large"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_interval"
                android:text="理想范围"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_normal"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/rl_bp_result_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_interval"
        android:paddingLeft="@dimen/item_interval"
        android:paddingRight="@dimen/item_interval"
        android:paddingTop="@dimen/item_interval">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/pic_bp_device_small"/>

        <im.hua.uikit.LoadingDotView
            android:id="@+id/ldv_bp_result"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_bp_result_bluetooth"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_bluetooth_failed"/>

        <TextView
            android:id="@+id/tv_bp_result_connection_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="正在连接"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_normal"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>
