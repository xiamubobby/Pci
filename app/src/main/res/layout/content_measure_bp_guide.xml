<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".module.task.MeasureBPGuideActivity"
    tools:showIn="@layout/activity_measure_bp_guide">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_measure_bp_guide_0_start">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_measure_bg_guide_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray"
                    android:gravity="center_vertical"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="① 打开血压仪"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_interval_large"
                    android:layout_marginTop="@dimen/item_interval_large"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray"
                    android:gravity="center_vertical"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="② 打开手机蓝牙"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_interval_large"
                    android:layout_marginTop="@dimen/item_interval_large"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray"
                    android:gravity="center_vertical"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="③ 等待设备连接"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_interval_large"
                    android:layout_marginTop="@dimen/item_interval_large"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_measure_bg_guide_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray"
                    android:gravity="center_vertical"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="① 佩带袖套"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_interval_large"
                    android:layout_marginTop="@dimen/item_interval_large"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray"
                    android:gravity="center_vertical"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="② 点击开始"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_interval_large"
                    android:layout_marginTop="@dimen/item_interval_large"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray"
                    android:gravity="center_vertical"
                    android:minHeight="?listPreferredItemHeightSmall"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="③ 等待测量结果"
                    android:textSize="@dimen/text_size_normal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_interval_large"
                    android:layout_marginTop="@dimen/item_interval_large"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
        </FrameLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_measure_bp_guide_0_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/selector_white_selected_primary_normal"
        android:text="开始测量"
        android:textColor="@drawable/selector_text_color_selected_accent"
        android:textSize="@dimen/text_size_normal"/>

</RelativeLayout>
