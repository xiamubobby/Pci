<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_room_doctor_msg_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_report_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/item_interval"
            android:layout_marginTop="@dimen/item_interval"
            android:singleLine="true"
            android:text="1212"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <include layout="@layout/divider_vertical"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_item_report_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/item_interval"/>
    </LinearLayout>

</LinearLayout>