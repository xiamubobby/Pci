<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/item_interval"
    >

    <CheckBox
        android:id="@+id/cb_item_task_medicine_record_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/item_interval_large"/>

    <me.drakeet.labelview.LabelView
        android:id="@+id/tv_item_task_medicine_record_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rightText="mg"/>
</LinearLayout>