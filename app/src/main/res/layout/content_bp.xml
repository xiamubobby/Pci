    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wonders.xlab.pci.module.record.monitor.BPActivity"
    tools:showIn="@layout/activity_bp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:paddingBottom="@dimen/item_interval"
        android:paddingTop="@dimen/item_interval">
        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/stl_bp_time_filter"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="@dimen/item_interval_large"
            android:paddingRight="@dimen/item_interval_large"
            app:tl_indicator_color="@color/colorPrimary"
            app:tl_tab_padding="20dp"/>
    </LinearLayout>
