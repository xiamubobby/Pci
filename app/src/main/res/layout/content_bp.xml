    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bp_pre_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/item_interval_large"
            android:paddingRight="@dimen/item_interval_large"
            android:text="@string/less_then"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_large"/>

        <TextView
            android:id="@+id/tv_bp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="12月01日"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/tv_bp_after_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/item_interval_large"
            android:paddingRight="@dimen/item_interval_large"
            android:text=">"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_large"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="时间"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="血压值"
            />
        <TextView
            android:text="心率"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/ry_bp_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        ></android.support.v7.widget.RecyclerView>

</LinearLayout>
