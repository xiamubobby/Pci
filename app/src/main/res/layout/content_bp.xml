<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wonders.xlab.pci.module.record.monitor.BPActivity"
    tools:showIn="@layout/activity_bp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:paddingBottom="@dimen/item_interval"
        android:paddingTop="@dimen/item_interval">

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/stl_bp_time_filter"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="@dimen/item_interval_large"
            android:paddingRight="@dimen/item_interval_large"
            app:tl_indicator_color="@color/colorPrimary"
            app:tl_tab_padding="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bp_pre_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/item_interval_large"
            android:paddingRight="@dimen/item_interval_large"
            android:text="@string/less_then"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_large"/>

        <TextView
            android:id="@+id/tv_bp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/tv_bp_after_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/item_interval_large"
            android:paddingRight="@dimen/item_interval_large"
            android:text=">"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_large"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_interval_large"
        android:paddingRight="@dimen/item_interval_large">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="时间"
            android:textSize="@dimen/text_size_normal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="true"
            android:text="上/下压(mmHg)"
            android:textSize="@dimen/text_size_normal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="心率(次/分)"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_bp_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
