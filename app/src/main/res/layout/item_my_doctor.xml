<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="@dimen/item_interval_small">

    <ImageView
        android:id="@+id/iv_my_doctor_portrait"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/item_interval_small"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:id="@+id/ll_my_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_interval_large"
        android:layout_toRightOf="@+id/iv_my_doctor_portrait"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_interval_small"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/tv_my_doctor_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_interval_small"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/tv_my_doctor_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_interval_small"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/tv_my_doctor_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_interval_small"
            android:textSize="@dimen/text_size_normal"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_doctor_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_my_doctor"
        android:layout_marginBottom="@dimen/item_interval_small"
        android:layout_marginTop="@dimen/item_interval_small"
        android:textSize="@dimen/text_size_normal"/>
</RelativeLayout>