<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refresh_symptom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wonders.xlab.pci.module.record.monitor.SymptomActivity"
    tools:showIn="@layout/activity_symptom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_symptom_pre_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/item_interval_large"
                android:paddingRight="@dimen/item_interval_large"
                android:text="@string/less_then"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_large"/>

            <TextView
                android:id="@+id/tv_symptom_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/tv_symptom_after_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/item_interval_large"
                android:paddingRight="@dimen/item_interval_large"
                android:text=">"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_large"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:background="@color/bg_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:background="@android:color/white"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/item_interval"
                android:text="主诉症状统计"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/fl_symptom_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="@dimen/item_interval_large"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@color/bg_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:background="@android:color/white"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/item_interval"
                android:text="患者症状及建议"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_symptom_advice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
