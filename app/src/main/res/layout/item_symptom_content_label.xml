<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_symptom_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_interval_small"
        android:background="@drawable/selector_primary_selected_white_normal"
        android:clickable="true"
        android:padding="@dimen/item_interval_small"
        android:textColor="@drawable/selector_text_color_selected_white"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:id="@+id/tv_item_symptom_question"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/item_interval_small"
        android:background="@drawable/shape_circle"
        android:gravity="center"
        android:text="@string/question_mark"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone"/>
</LinearLayout>