<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.wonders.xlab.pci"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Required -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".application.XApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- ActiveAndroid -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Pci.db"/>
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1"/>

        <!-- 设置环信应用的appkey -->
        <meta-data
            android:name="EASEMOB_APPKEY"
            android:value="xlab#pci"/>
        <!-- 声明sdk所需的service SDK核心功能 -->
        <service android:name="com.easemob.chat.EMChatService"/>

        <!-- umeng -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="567b627867e58eae8b0056e9"/>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="internal"/>

        <activity
            android:name=".module.MainActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".module.record.report.ReportDetailActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_report_detail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="me.iwf.photopicker.PhotoPickerActivity"
            android:configChanges="orientation|screenSize"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/PhotoPickerTheme"/>
        <activity
            android:name="me.iwf.photopicker.PhotoPagerActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/PhotoPickerTheme"/>
        <activity
            android:name=".module.task.DailyTaskActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_daily_task"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name=".module.login.LoginActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".module.task.AddBPActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_add_blood_pressure"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".module.task.AddBSActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_add_blood_sugar"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".module.task.AddCigaretteActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_add_cigarette"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".module.task.AddWineActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_add_wine"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".module.task.AddSymptomActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_add_symptom"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".module.MyDoctorActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_my_doctor"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".module.record.monitor.BPActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_bp"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".module.record.monitor.BSActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_bp"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".module.record.monitor.SymptomActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_symptom"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".module.record.monitor.MedicineActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_medicine"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".module.UserCenterActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_user_center"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

        <service
            android:name=".service.XEMChatService"
            android:enabled="true"
            android:exported="true"/>

        <receiver
            android:name=".receiver.BootstrapReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.EMChatMessageBroadcastReceiver"
            android:enabled="true"
            android:exported="true"/>

        <!-- umeng -->
        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService"/>

        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <receiver
            android:name=".receiver.TimeClickReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>
        <receiver
            android:name=".receiver.ConnectionBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>
    </application>

</manifest>
